<% 	
	String id2 = (String)request.getParameter("id"); 
	request.setAttribute("id", id2);
	request.setAttribute("password", password);
	session.setAttribute("id", id2);
	application.setAttribute("id", id2);
	
	if((id!= null && id.equals("aaaa")&&password.equals("1111"))||sessionId.equals("aaaa")) {
		
		response.sendRedirect("mainpage.jsp");
